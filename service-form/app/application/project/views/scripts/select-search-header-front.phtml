//        }
        $optionsString.= implode(',', $valuePair).'}';
        $optionsArr[] = $optionsString;
    }
}

$recorderArr = array();
foreach($this->recorder as $key => $value) {
    if(is_array($value)) {
        $recorderString = '';
        $recorderString.= $key.':{';
        foreach($value as $k => $v) {
            $recorderString.= $k.':\''.$v.'\',';
        }
        $recorderString = substr($recorderString, 0, -1);
        $recorderString.= '}';
    } else {
        $recorderString = '';
        $recorderString.= $value.':{}';
    }
    $recorderArr[] = $recorderString;
}
