$optionsArr = array();
foreach($this->selectFields as $key => $value) {
    if($value !== NULL) {
        $optionsString = '';
        if(substr($key, 0, 1) == '@') {
    	    $key = substr($key, 1);
        }
        $optionsString.= $key.':{';
        $valuePair = array();
        foreach($value as $k => $v) {
            $valuePair[] = $k.':\''.$v.'\'';
        }
//        if() {
